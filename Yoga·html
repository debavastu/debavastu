  <!-- scripts -->
  <script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script>
  (function(){
    try{ emailjs.init('dkxgwOwsd0z7BMPyo'); }catch(e){}
    const form = document.getElementById('bookingForm');
    const btn = document.getElementById('bookBtn');
    form.addEventListener('submit', async function(e){
      e.preventDefault();
      if(btn.disabled) return; btn.disabled=true; btn.innerText='Processing...';
      const booking = {
        name: document.getElementById('b_name').value.trim(),
        phone: document.getElementById('b_phone').value.trim(),
        email: document.getElementById('b_email').value.trim(),
        service: document.getElementById('b_service').value,
        date: document.getElementById('b_date').value,
        message: document.getElementById('b_msg').value.trim()
      };
      // simple validation
      if(!booking.name || !booking.phone){ alert('Please enter name & phone'); btn.disabled=false; btn.innerText='Request & Pay (optional)'; return; }
      // email notify (non-blocking)
      try{ await emailjs.send('service_dea8439','template_xrogxm8',{
        from_name:booking.name, from_email:booking.email, phone:booking.phone, service:booking.service, preferred_date:booking.date, message:booking.message
      }); }catch(e){console.warn('emailjs',e)}

      // save fallback
      try{ const arr=JSON.parse(localStorage.getItem('deba_bookings')||'[]'); arr.unshift(Object.assign({created:new Date().toISOString()},booking)); localStorage.setItem('deba_bookings',JSON.stringify(arr)); }catch(e){ }

      // open whatsapp to owner
      try{ const txt=encodeURIComponent(`Yoga booking: ${booking.name} | ${booking.service} | ${booking.date} | ${booking.phone}`); window.open('https://wa.me/916372710439?text='+txt,'_blank'); }catch(e){}

      alert('Request received. We will contact you to confirm the session.');
      form.reset(); btn.disabled=false; btn.innerText='Request & Pay (optional)';
    });
  })();
  </script>
